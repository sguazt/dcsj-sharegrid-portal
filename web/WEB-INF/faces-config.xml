<?xml version="1.0"?>

<faces-config version="1.2"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">

	<!--@{ Navigation Rules -->
	<navigation-rule>
		<from-view-id>/*</from-view-id>
		<navigation-case>
			<from-outcome>logout-ko</from-outcome>
			<to-view-id>/index.jspx</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>logout-ok</from-outcome>
			<to-view-id>/index.jspx</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/cloud/submitsvc.jspx</from-view-id>
		<navigation-case>
			<from-outcome>cancel</from-outcome>
			<to-view-id>/index.jspx</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>svc-submit-ok</from-outcome>
			<to-view-id>/cloud/svclist.jspx</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/cloud/svcdetail.jspx</from-view-id>
		<navigation-case>
			<from-outcome>cancel</from-outcome>
			<to-view-id>/cloud/svclist.jspx</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>delete-ok</from-outcome>
			<to-view-id>/cloud/svclist.jspx</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>monitor</from-outcome>
			<to-view-id>/cloud/svcprobe.jspx</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/cloud/svcprobe.jspx</from-view-id>
		<navigation-case>
			<from-outcome>cancel</from-outcome>
			<to-view-id>/cloud/svclist.jspx</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/grid/jobdetail.jspx</from-view-id>
		<navigation-case>
			<from-outcome>cancel</from-outcome>
			<to-view-id>/grid/joblist.jspx</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>delete-ok</from-outcome>
			<to-view-id>/grid/joblist.jspx</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/grid/submitjob.jspx</from-view-id>
		<navigation-case>
			<from-outcome>cancel</from-outcome>
			<to-view-id>/index.jspx</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>jobfile-submit-ok</from-outcome>
			<to-view-id>/grid/joblist.jspx</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>manjob-submit-ok</from-outcome>
			<to-view-id>/grid/joblist.jspx</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/index.jspx</from-view-id>
		<navigation-case>
			<from-outcome>login-ko</from-outcome>
			<to-view-id>/index.jspx</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>login-ok</from-outcome>
			<to-view-id>/index.jspx</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>logout-ko</from-outcome>
			<to-view-id>/index.jspx</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>logout-ok</from-outcome>
			<to-view-id>/index.jspx</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>register</from-outcome>
			<to-view-id>/registeruser.jspx</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/registeruser.jspx</from-view-id>
		<navigation-case>
			<from-outcome>cancel</from-outcome>
			<to-view-id>/index.jspx</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>registration-ok</from-outcome>
			<to-view-id>/registeruser.jspx</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>registration-ko</from-outcome>
			<to-view-id>/registeruser.jspx</to-view-id>
		</navigation-case>
	</navigation-rule>
	<!--@} Navigation Rules -->

